<Page x:Class="PIT_PR_6_Cheb_Akhm.AuthLog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PIT_PR_6_Cheb_Akhm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthLog">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="Autho_Butt" Content="Авторизация" Grid.Column="3" Grid.Row="6" Click="Autho_Butt_Click"/>

        <TextBox Name="phoneText" Grid.Column="3" Grid.Row="2" TextWrapping="Wrap" Text="" />
        <PasswordBox Name="passwordText" Grid.Column="3" Grid.Row="4" />

        <Label Content="Телефон" Grid.Column="3" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
        <Label Content="Пароль" Grid.Column="3" Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>

        <Label Content="Авторизация!" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="3" FontSize="26" HorizontalAlignment="Center"/>
        
       </Grid>
</Page>
