<Page x:Class="PIT_PR_6_Cheb_Akhm.RegLog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PIT_PR_6_Cheb_Akhm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegLog">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="Reg_Butt" Content="Регистрация" Grid.Column="4" Grid.Row="10" Grid.ColumnSpan="2" 
                Click="Reg_Butt_Click" />
        <Button x:Name="Autho_Butt" Content="Авторизация" Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="2" 
                 Click="Autho_Butt_Click"/>

        <TextBox Name="nameText"  Grid.Column="3" Grid.Row="2"
                 TextWrapping="Wrap" Text="" />
        <TextBox Name="phoneText" Grid.Column="3" Grid.Row="4"
                 TextWrapping="Wrap" Text="" />
        <TextBox Name="emailText" Grid.Column="3" Grid.Row="6"
                 TextWrapping="Wrap" Text="" />
        <PasswordBox Name="passwordText" Grid.Column="3" Grid.Row="8"/>

        <Label Content="Имя пользователя" Grid.Column="3" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
        <Label Content="Телефон" Grid.Column="3" Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
        <Label Content="Почта" Grid.Column="3" Grid.Row="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
        <Label Content="Пароль" Grid.Column="3" Grid.Row="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
        
        <Label Content="Регистрация!" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="3" FontSize="22" HorizontalAlignment="Center"/>
        <Label Content="Уже есть аккаунт?" FontSize="20" Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="9"/>
    </Grid>
</Page>
